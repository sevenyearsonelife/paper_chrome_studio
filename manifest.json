{
  "manifest_version": 3,
  "name": "AI Studio Helper",
  "version": "1.0",
  "description": "A chrome extension for Google AI Studio that provides paper analysis prompts.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://aistudio.google.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/app/prompts/new_chat*"],
      "js": ["content.js"]
    }
  ]
} 